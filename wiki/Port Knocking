<body>
  <div id="main-box">
    <label>Host:</label>
    <input type="text" id="host" name="target">

    <label>Port Sequences:</label>
    <input type="password" id="ports_seq" name="ports_seq">

    <button onclick="knock()">Knock</button>
  </div>

  <script>
    function knock() {

        let target_host = document.getElementById('host').value;
        let ports_seq = document.getElementById('ports_seq').value;
        let numbers = ports_seq.split(' ');

        numbers.forEach(number => {
            let url = `http://${target_host}:${number}`;

            fetch(url, {mode: 'no-cors',credentials: 'omit'})
        });
    }
  </script>

